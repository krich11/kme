# KME Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# REQUIRED CONFIGURATION (no defaults in config.py)
# =============================================================================

# KME Identity
KME_ID=AAAABBBBCCCCDDDD

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/kme_db

# Security Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production

# =============================================================================
# OPTIONAL CONFIGURATION (has defaults)
# =============================================================================

# KME Network Configuration
KME_HOSTNAME=localhost
KME_PORT=8443

# Database Setup Script Variables (used by scripts/database_setup.py)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password

# Database Pool Configuration
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false
DATABASE_POOL_PRE_PING=true
DATABASE_POOL_RECYCLE=3600
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# TLS Configuration
TLS_CERT_FILE=/path/to/kme.crt
TLS_KEY_FILE=/path/to/kme.key
TLS_CA_FILE=/path/to/ca.crt
TLS_VERSION=1.2

# Security Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/kme/kme.log
LOG_FORMAT=json

# Key Management Configuration
DEFAULT_KEY_SIZE=352
MAX_KEY_SIZE=1024
MIN_KEY_SIZE=64
MAX_KEYS_PER_REQUEST=128
MAX_SAE_ID_COUNT=10

# QKD Network Configuration
QKD_NETWORK_ENABLED=true
QKD_LINK_TIMEOUT=30
QKD_KEY_GENERATION_RATE=1000

# Key Generation Configuration (Week 10.5)
KEY_GENERATION_MODE=mock
QKD_NETWORK_URL=mock://qkd-system
QKD_AUTHENTICATION_TOKEN=mock-token

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Development Configuration
DEBUG=false
RELOAD=false
TESTING=false

# CORS Configuration
ALLOWED_ORIGINS=["*"]
ALLOWED_HOSTS=["*"]

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Level (development/testing/production)
SECURITY_LEVEL=production

# TLS Configuration
TLS_CERTIFICATE_PATH=/path/to/kme_cert.pem
TLS_PRIVATE_KEY_PATH=/path/to/kme_key.pem
CA_CERTIFICATE_PATH=/path/to/ca_cert.pem

# Key Storage Security
KEY_ENCRYPTION_KEY=your-key-encryption-key-here-change-this-in-production

# TLS Settings
ENABLE_MUTUAL_TLS=true
MIN_TLS_VERSION=TLSv1.2
MAX_TLS_VERSION=TLSv1.3
