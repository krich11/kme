# KME Admin Configuration Template
# Copy this file to admin.env and update with your actual values

# Database settings
DATABASE_URL=postgresql://username:password@localhost/database_name

# KME settings
KME_ID=KME001
KME_HOST=localhost
KME_PORT=8000

# Certificate settings
DEFAULT_CERT_VALIDITY_DAYS=365
DEFAULT_KEY_SIZE=2048

# SAE settings
DEFAULT_MAX_KEYS_PER_REQUEST=128
DEFAULT_MAX_KEY_SIZE=1024
DEFAULT_MIN_KEY_SIZE=64

# Security settings
DEFAULT_CA_SUBJECT=/C=US/ST=State/L=City/O=KME Organization/OU=KME Unit/CN=KME Development CA
DEFAULT_SAE_SUBJECT_TEMPLATE=/C=US/ST=State/L=City/O=KME Organization/OU=KME Unit/CN={sae_id}

# Validation settings
SAE_ID_MIN_LENGTH=1
SAE_ID_MAX_LENGTH=255

# Network settings
DEFAULT_TIMEOUT=30
MAX_RETRIES=3

# Development settings
DEBUG_MODE=false
SKIP_CERT_VALIDATION=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
